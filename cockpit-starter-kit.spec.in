Name: cockpit-click-to-run
Version: @VERSION@
Release: 1%{?dist}
Summary: Cockpit 365
License: LGPLv2+

Source: cockpit-click-to-run-%{version}.tar.gz
BuildArch: noarch
BuildRequires:  libappstream-glib

Requires: cockpit-system

%define debug_package %{nil}

%description
Cockpit module to provide buttons for shell scripts

%prep
%setup -n cockpit-starter-kit

%install
%make_install
appstream-util validate-relax --nonet %{buildroot}/%{_datadir}/metainfo/*

# drop source maps, they are large and just for debugging
find %{buildroot}%{_datadir}/cockpit/ -name '*.map' | xargs rm --verbose

%files
%{_datadir}/cockpit/*
%{_datadir}/metainfo/*

%changelog
